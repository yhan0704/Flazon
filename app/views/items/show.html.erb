<%= session[:cart] %>
<h1>Item Details</h1>
<h2>Item Name: <%= @item.name %></h2>
<h2>Price: <%= number_to_currency(@item.price) %> </h2>
<span> On category: <%= link_to @item.category.name, category_path(@item.category) %> </span>
<div class="">
  <%= link_to "Edit Item", edit_item_path(@item) %>
  <%= link_to "Delete Item", item_path(@item), method: :delete %>
  <%= link_to "Add to Cart", add_to_cart_path(@item) %>
</div>

<%= button_to "Add Item" %>
