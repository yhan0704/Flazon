<!DOCTYPE html>
<html>
  <head>
    <title>Flazon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if session["username"] %>
    <%= "Welcome " %> <%= link_to "#{session["username"]}", user_path(session[:username_id]) %> 
    <%=  %>

      <% if session[:cart] %>
        <%= "Your Cart has"%>  <%= link_to session[:cart].count, cart_path %><%= " item(s)."%>
      <% else %>
        <%= "Your Cart has 0 item(s)."%>
      <% end %>
    <%= link_to "Log out", logout_path, method: :delete %>
  <% else %>
    <%= link_to "Log In", login_path %>
    <%= link_to "Sign Up", new_user_path %>
  <% end %>

    <%= yield %>
  </body>
</html>
