<h1>Log in</h1>

<% if flash["error"] %>
    <div class="error"><%= flash["error"] %></div>
<% end %>

<%= form_tag "/login" do %>
    <%= label :username, "Username" %>
    <%= text_field_tag :username %><br><br>
    <%= label :password, "Password" %>
    <%= password_field_tag :password %><br><br>
    <%= submit_tag "Login" %>
<% end %>


<p><%= link_to "Go to main page", home_path %></p>